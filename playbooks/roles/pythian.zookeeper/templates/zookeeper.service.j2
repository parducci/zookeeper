[Unit]
Description=ZooKeeper Service
Documentation=http://zookeeper.apache.org
Requires=network.target
After=network.target

[Service]
Type=forking
User={{ zk_user }}
Group={{ zk_group }}
Environment="ZOO_LOG4J_PROP=CONSOLE,ROLLINGFILE"
Environment="ZOO_LOG_DIR={{ zk_logging_dir }}"
ExecStart={{ zk_working_dir }}/bin/zkServer.sh start {{ zk_conf_dir }}/zookeeper.conf
ExecStop={{ zk_working_dir }}/bin/zkServer.sh stop

[Install]
WantedBy=multi-user.target
